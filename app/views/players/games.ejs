                                    <div class="col-auto">
                                        <i class="far fa-2x fa-clock"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col--12 col-lg-7">
                        <div class="card shadow mb-4">
                            <!-- Card Header - Dropdown -->
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold cyclone-text">Box Scores: <%= player.name %></h6>
                                <div class="dropdown no-arrow">
                                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                        <div class="dropdown-header">Dropdown Header:</div>
                                        <a class="dropdown-item" data-toggle="collapse" href="#collapseStats" aria-expanded="false" aria-controls="collapseExample">Collapse</a>
                                        <a class="dropdown-item" href="#">Another action</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#">Something else here</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Card Body -->
                            <div class="card-body collapse show" id="collapseStats">
                                <div class="chart-area">
                                    <table class="table table-responsive-xl table-hover">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th scope="col">Season</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">Opponent</th>
                                                <th scope="col">Location</th>
                                                <th scope="col">Game Type</th>
                                                <th scope="col">Result</th>
                                                <th scope="col">Start</th>
                                                <th scope="col">FG</th>
                                                <th scope="col">FGA</th>
                                                <th scope="col">FG%</th>
                                                <th scope="col">2P</th>
                                                <th scope="col">2PA</th>
                                                <th scope="col">2P%</th>
                                                <th scope="col">3P</th>
                                                <th scope="col">3PA</th>
                                                <th scope="col">3P%</th>
                                                <th scope="col">FT</th>
                                                <th scope="col">FTM</th>
                                                <th scope="col">FT%</th>
                                                <th scope="col">ORB</th>
                                                <th scope="col">DRB</th>
                                                <th scope="col">TRB</th>
                                                <th scope="col">AST</th>
                                                <th scope="col">STL</th>
                                                <th scope="col">BLK</th>
                                                <th scope="col">TO</th>
                                                <th scope="col">PF</th>
                                                <th scope="col">PTS</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% player.gameLog.forEach(function(game){ %>
                                            <tr>
                                                <td><%= game.season %></td>
                                                <td><%= game.date %></td>
                                                <td><%= game.opp %></td>
                                                <td><%= game.location %></td>
                                                <td><%= game.gameType %></td>
                                                <td><%= game.result %></td>
                                                <td><%= game.start %></td>
                                                <td><%= game.fgm %></td>
                                                <td><%= game.fga %></td>
                                                <td><%= (game.fgp * 100).toFixed(1) %></td>
                                                <td><%= game.twoPM %></td>
                                                <td><%= game.twoPA %></td>
                                                <td><%= (game.twoP * 100).toFixed(1) %></td>
                                                <td><%= game.threePM %></td>
                                                <td><%= game.threePA %></td>
                                                <td><%= (game.threeP * 100).toFixed(1) %></td>
                                                <td><%= game.ftm %></td>
                                                <td><%= game.fta %></td>
                                                <td><%= (game.ftp * 100).toFixed(1) %></td>
                                                <td><%= game.orb %></td>
                                                <td><%= game.drb %></td>
                                                <td><%= game.orb + game.drb %></td>
                                                <td><%= game.ast %></td>
                                                <td><%= game.stl %></td>
                                                <td><%= game.blk %></td>
                                                <td><%= game.to %></td>
                                                <td><%= game.pf %></td>
                                                <td><%= game.pts %></td>
                                            </tr>
                                            <% }); %>
                                            <tr>
                                                <td>Career</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% include ../partials/footer %>
<script>
    // CountUp Variables
    let points       = <%= careerPTS %>;
    let ast          = <%= careerAST %>;
    let reb          = <%= careerREB %>;
    let win          = <%= wins %>;
    let loss         = <%= losses %>;
    let neutralWin   = <%= nWins %>;
    let neutralLoss  = <%= nLosses %>;
    let homeWin      = <%= hWins %>;
    let homeLoss     = <%= hLosses %>;
    let awayWin      = <%= aWins %>;
    let awayLoss     = <%= aLosses %>;
    let ncaaWin      = <%= ncaaWins %>;
    let ncaaLoss     = <%= ncaaLosses %>;

    // CountUp JS
    let winsCount = new CountUp('winCounter', 0, win, 0, 2.5);
        if (!winsCount.error) {
            winsCount.start();
        } else {
            console.error(winsCount.error);
        }

    let lossCount = new CountUp('lossCounter', 0, loss, 0, 2.5);
        if (!lossCount.error) {
            lossCount.start();
        } else {
            console.error(lossCount.error);
        }

    let hWinsCount = new CountUp('hWinCounter', 0, homeWin, 0, 2.5);
        if (!hWinsCount.error) {
            hWinsCount.start();
        } else {
            console.error(hWinsCount.error);
        }

    let hLossCount = new CountUp('hLossCounter', 0, homeLoss, 0, 2.5);
        if (!hLossCount.error) {
            hLossCount.start();
        } else {
            console.error(hLossCount.error);
        }

    let aWinsCount = new CountUp('aWinCounter', 0, awayWin, 0, 2.5);
        if (!aWinsCount.error) {
            aWinsCount.start();
        } else {
            console.error(aWinsCount.error);
        }

    let aLossCount = new CountUp('aLossCounter', 0, awayLoss, 0, 2.5);
        if (!aLossCount.error) {
            aLossCount.start();
        } else {
            console.error(aLossCount.error);
        }

    let nWinsCount = new CountUp('nWinCounter', 0, neutralWin, 0, 2.5);
        if (!nWinsCount.error) {
            nWinsCount.start();
        } else {
            console.error(nWinsCount.error);
        }

    let nLossCount = new CountUp('nLossCounter', 0, neutralLoss, 0, 2.5);
        if (!nLossCount.error) {
            nLossCount.start();
        } else {
            console.error(nLossCount.error);
        }
    
    let ncaaWinsCount = new CountUp('ncaaWinCounter', 0, ncaaWin, 0, 2.5);
        if (!ncaaWinsCount.error) {
            ncaaWinsCount.start();
        } else {
            console.error(ncaaWinsCount.error);
        }

    let ncaaLossCount = new CountUp('ncaaLossCounter', 0, ncaaLoss, 0, 2.5);
        if (!ncaaLossCount.error) {
            ncaaLossCount.start();
        } else {
            console.error(ncaaLossCount.error);
        }

    let pointsCount = new CountUp('pointsCounter', 0, points, 0, 2.5);
        if (!pointsCount.error) {
            pointsCount.start();
        } else {
            console.error(pointsCount.error);
        }

    let assistsCount = new CountUp('assistsCounter', 0, ast, 0, 2.5);
        if (!assistsCount.error) {
            assistsCount.start();
        } else {
            console.error(assistsCount.error);
        }

    let rebsCount = new CountUp('rebsCounter', 0, reb, 0, 2.5);
        if (!rebsCount.error) {
            rebsCount.start();
        } else {
            console.error(rebsCount.error);
        }  
</script>