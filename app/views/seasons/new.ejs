<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-xl-6 col-lg-7 col-md-8 col-sm-10 mx-auto form p-4">
            <div class="py-5 text-center">
                <i class="fas fa-dna fa-4x black-dna mb-3"></i>
                <h1 class="mb-3 font-weight-normal">Add New Season</strong></h1>
            </div>
            <div class="px-2 mb-4">
                <form action="/seasons" method="POST" class="justify-content-center">
                    <div class="form-group mb-3">
                        <label for="season">Season</label>
                        <input class="form-control" type="text" id="season" name="year" placeholder="2013-2014">
                    </div>
                    <div class="form-group mb-3">
                        <label for="teamImage">Team Image</label>
                        <input class="form-control" type="text" id="teamImage" name="image" placeholder="Image URL">
                    </div>
                    <div class="form-group mb-3">
                        <label for="heacCoach">Head Coach</label>
                        <input class="form-control" type="text" id="teamImage" name="headCoach" placeholder="Head Coach">
                    </div>
                    <div class="form-group mb-3">
                        <label for="wins">Wins</label>
                        <input class="form-control" type="text" id="wins" name="wins" placeholder="Overall Wins">
                    </div>
                    <div class="form-group mb-3">
                        <label for="losses">Losses</label>
                        <input class="form-control" type="text" id="losses" name="losses" placeholder="Overall Losses">
                    </div>
                    <div class="form-group mb-3">
                        <label for="confWins">Conference Wins</label>
                        <input class="form-control" type="text" id="confWins" name="confWins" placeholder="Conference Wins">
                    </div>
                    <div class="form-group mb-3">
                        <label for="confLosses">Conference Losses</label>
                        <input class="form-control" type="text" id="confLosses" name="confLosses" placeholder="Conference Losses">
                    </div>
                    <div class="form-group mb-3">
                        <label for="conf">Conference</label>
                        <input class="form-control" type="text" id="conf" name="conf" placeholder="Conference">
                    </div>
                    <div class="form-group mb-3">
                        <label for="confRank">Conference Finish</label>
                        <input class="form-control" type="text" id="confRank" name="confRank" placeholder="Conference Finish">
                    </div>
                    <div class="form-group mb-3">
                        <label for="description">Description</label>
                        <input class="form-control" type="text" id="description" name="description" placeholder="Sweet 16">
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        <div class="form-signin">
                            <a href="/seasons">Go Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>