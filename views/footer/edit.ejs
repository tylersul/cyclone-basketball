<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-7 col-md-8 col-sm-10 mx-auto form p-4">
                <div class="py-5 text-center">
                    <i class="fas fa-dna fa-4x black-dna mb-3"></i>
                    <h1 class="mb-3 font-weight-normal">Edit: <strong><%= blog.title%></strong></h1>
                </div>
                <div class="px-2 mb-4">
                    <form action="/blog/<%= blog._id %>?_method=PUT" method="POST" class="justify-content-center">
                        <div class="form-group mb-3">
                            <label for="title">Title</label>
                            <input class="form-control" type="text" id="title" name="blog[title]" value="<%= blog.title %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="sub">Subheader</label>
                            <input class="form-control" type="text" id="sub" name="blog[subheader]" value="<%= blog.subheader %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="image">Header Image</label>
                            <input class="form-control" type="text" id="headerImage" name="blog[headerImage]" value="<%= blog.headerImage %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="content">Blog Content</label>
                            <textarea rows="10" class="form-control" type="text" id="content" name="blog[content]"><%= blog.content %></textarea>
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-lg btn-primary btn-block">Submit</button>
                            <div class="form-signin">
                                <a href="/blog/<%= blog._id %>">Go Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<% include ../partials/footer %>
