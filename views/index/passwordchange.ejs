<% include ./partials/header %>
<div class="row">
    <div class="col-md-12 text-center">
        <form class="form-signin" action="/reset/<%= token %>" method="POST">
            <svg class="bi bi-person-square" width="3em" height="3em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M14 1H2a1 1 0 00-1 1v12a1 1 0 001 1h12a1 1 0 001-1V2a1 1 0 00-1-1zM2 0a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V2a2 2 0 00-2-2H2z" clip-rule="evenodd"/>
                <path fill-rule="evenodd" d="M2 15v-1c0-1 1-4 6-4s6 3 6 4v1H2zm6-6a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
            </svg>
            <h1 class="h3 mb-3 font-weight-normal">Update Password:</h1>
            <label for="inputPassword" class="sr-only">Username</label>
            <input type="password" id="inputPassword" class="form-control" name="password" placeholder="New Password" required autofocus>
            <label for="inputPasswordConfirm" class="sr-only">Username</label>
            <input type="password" id="inputUEmail" class="form-control" name="confirm" placeholder="Confirm New Password" required autofocus>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Confirm</button>
        </form>
        <div class="form-signin">
            <a href="/home">Go Back</a>
        </div>
    </div>
</div>

<% include ./partials/footer %>