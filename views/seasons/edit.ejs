<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-7 col-md-8 col-sm-10 mx-auto form p-4">
                <div class="py-5 text-center">
                    <i class="fas fa-dna fa-4x black-dna mb-3"></i>
                    <h1 class="mb-3 font-weight-normal">Edit Team: <strong><%= season.year%></strong></h1>
                </div>
                <div class="px-2 mb-4">
                    <form action="/seasons/<%= season._id %>?_method=PUT" method="POST" class="justify-content-center">
                        <div class="form-group mb-3">
                            <label for="season">Season</label>
                            <input class="form-control" type="text" id="season" name="season[year]" value="<%= season.year %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="firstName">Player Image</label>
                            <input class="form-control" type="text" id="playerImage" name="season[image]" value="<%= season.image %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="headCoach">Head Coach</label>
                            <input class="form-control" type="text" id="headCoach" name="season[headCoach]" value="<%= season.headCoach %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="wins">Wins</label>
                            <input class="form-control" type="text" id="wins" name="season[wins]" value="<%= season.wins %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="losses">Losses</label>
                            <input class="form-control" type="text" id="losses" name="season[losses]" value="<%= season.losses %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="conf">Conference</label>
                            <input class="form-control" type="text" id="confLosses" name="season[conf]" value="<%= season.conf %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="confWins">Conference Wins</label>
                            <input class="form-control" type="text" id="confWins" name="season[confWins]" value="<%= season.confWins %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="confLosses">Conference Losses</label>
                            <input class="form-control" type="text" id="confLosses" name="season[confLosses]" value="<%= season.confLosses %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="confRank">Big 12 Finish</label>
                            <input class="form-control" type="text" id="confRank" name="season[confRank]" value="<%= season.confRank %>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="teamDescription">Description</label>
                            <input class="form-control" type="text" id="teamDescription" name="season[description]" value="<%= season.description %>">
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                            <div class="form-signin">
                                <a href="/seasons">Go Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<% include ../partials/footer %>
